# ImmichVR Environment Configuration
# 
# To enable NVIDIA GPU support, uncomment the line below:
# COMPOSE_FILE=docker-compose.yml:docker-compose.nvidia.yml
#
# Default (CPU only, works on Mac/All):
COMPOSE_FILE=docker-compose.yml

# Frontend port (default: 21370)
APP_PORT=21370

# PostgreSQL Database Configuration
POSTGRES_USER=immichvr
POSTGRES_PASSWORD=changeme
POSTGRES_DB=immichvr

# Backend Configuration
BACKEND_PORT=3000

# AI Service Configuration
AI_SERVICE_PORT=5000
AI_SERVICE_URL=http://ai:5000
AI_MODEL_NAME=Depth-Anything-V2
AI_MODEL_VERSION=small

# Data Storage Configuration
UPLOAD_DIR=/data/uploads
DEPTH_MAPS_DIR=/data/depth_maps

# Processing Worker Configuration
AUTO_START_WORKER=true

# Experimental Video Processing Configuration
ENABLE_EXPERIMENTAL_VIDEO=false
VIDEO_FRAME_EXTRACTION_FPS=1
VIDEO_MAX_FRAMES=30
VIDEO_FRAME_METHOD=interval

# Video Side-by-Side (SBS) Processing Configuration
# Used for offline video conversion to 3D SBS format for VR playback
VIDEO_SBS_DIVERGENCE=2.0
VIDEO_SBS_FORMAT=SBS_FULL

# Immich Configuration
IMMICH_URL=http://immich.example.com
IMMICH_API_KEY=your-immich-api-key-here
